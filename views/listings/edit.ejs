<% layout('/layout/boilerplate.ejs'); -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h1>Edit listing </h1>
                <form action="/listings/<%= listing._id%>/?_method=PUT" novalidate method="post"
                    class="needs-validation">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" required value="<%= listing.title %>"
                            name="listing[title]">
                        <div class="valid-feedback">Title looks good</div>
                        <div class="invalid-feedback">Please Enter a Valid Title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" required
                            class="form-control"><%= listing.description%></textarea>
                        <div class="invalid-feedback">Please Enter a Short Description</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input type="text" required value="<%= listing.image %>" class="form-control"
                            name="listing[image]">
                        <div class="invalid-feedback">Enter valid URL</div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="text" required class="form-control" value="<%= listing.price%>"
                                    name="listing[price]">
                                <div class="invalid-feedback">Price should be valid</div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" required class="form-control" value="<%= listing.location%>"
                                    name="listing[location]">
                                <div class="invalid-feedback">location should be valid</div>

                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" required class="form-control" value="<%=listing.country %>"
                            name="listing[country]">
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>

                    <button class="btn edit-btn">Edit</button><br><br>

            </div>
            </form>
        </div>
        </div>

    </body>