<% layout('/layout/boilerplate.ejs'); -%>

<body>
    <h1>Edit listing </h1>
    <form action="/listings/<%= listing._id%>/?_method=PUT" method="post">
        <br> <input type="text" value="<%= listing.title %>" name="listing[title]" >
        <br> <br><textarea  name="listing[description]"><%= listing.description%></textarea>
        <br> <br><input type="text" value="<%= listing.image %>" name="listing[image]">
        <br> <br><input type="number" value="<%= listing.price%>" name="listing[price]">
        <br> <br><input type="text" value="<%= listing.location%>" name="listing[location]">
        <br> <br><input type="text" value="<%=listing.country %>" name="listing[country]">
    
        <br><br> <button>Submit</button>
    
    </form>
</body>